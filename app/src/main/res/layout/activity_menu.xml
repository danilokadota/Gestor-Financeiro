<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center">

        <Button
            android:id="@id/menu_btn_cadastro"
            android:drawableTop="@drawable/cadastro"
            android:text="@string/menu_btn_cadastro"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"/>


        <Button
            android:id="@id/menu_btn_consulta"
            android:drawableTop="@drawable/icon_seo"
            android:text="@string/menu_btn_consulta"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/transparent"/>
    </LinearLayout>

</LinearLayout>
